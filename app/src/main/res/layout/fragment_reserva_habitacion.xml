<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.reserva_habitacion.ReservaHabitacionFragment">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:text="SELECCIONE LA HABITACION DISPONIBLE"
        android:textAlignment="center"
        android:textColor="@color/blue_oscuro"
        android:textColorHighlight="@color/blue_oscuro"
        android:textSize="30sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reserva_habitacion_lista_habitacion"
        android:layout_width="match_parent"
        android:layout_height="556dp"
        android:visibility="visible"
        tools:visibility="gone">

    </androidx.recyclerview.widget.RecyclerView>

    <ProgressBar
        android:id="@+id/reserva_habitacion_loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="100dp" />


</LinearLayout>